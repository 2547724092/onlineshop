<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/necklace"
        android:id="@+id/jingpin_img"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/jingpin_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/jingpin_img"
        android:text="Title"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/jingpin_lingquan"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/jingpin_img"
        android:layout_below="@id/jingpin_name"
        android:layout_marginTop="15dp"
        android:text="content"
        android:textSize="12sp"
        android:background="@drawable/text3_border_shape"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/jingpin_paysum"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="30dp"
        android:text="Title"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/jingpin_baoyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jingpin_name"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/jingpin_lingquan"
        android:background="@drawable/text4_border_shape"
        android:text="包邮"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_addcar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/addcar"
        />



</RelativeLayout>